package main

import (
	"{{.RepoName}}/gen"
)

func init() {

    // define gateway
	gateway := gen.NewEmptyGateway(&Gen,
        "gateway",                 // service name
        "github.com/nerv/gateway", // repo name
    )

    // add routes to gateway
    gateway.AddRoute("/")
    gateway.AddRoute("/banner")

    // register gateway
	Gen.AddConfig(gateway)

}
